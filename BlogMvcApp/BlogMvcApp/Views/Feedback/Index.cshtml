
@{
    ViewBag.Title = "Feedbacks";
}

<h2 class="text-center">Leave your feedback</h2>

<div class="container mb-2 w-75">
    <h2>@ViewBag.Name</h2>
    <h6 class="text-muted">@ViewBag.Date</h6>
    @if (ViewBag.Text != null)
    {
        <p class="border rounded p-3">@ViewBag.Text</p>
    }
</div>
<hr class="ml-3"/>
<div class="row">
    <div class="col-sm-2 col-1"></div>
    <div class="container col-sm-8 col-10 m-1">
        @using (Html.BeginForm("Send", "Feedback", FormMethod.Get))
        {
            <div class="form-group">
                @Html.Label("Your name: ")
                @Html.TextBox("nameAuthor", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Feedback: ")
                @Html.TextArea("text", null, new { @class = "form-control" })
            </div>
            <input type="submit" value="Leave feedback" class="btn btn-primary" />
        }
    </div>
    <div class="col-sm-2 col-1"></div>
</div>

